@model IEnumerable<WebTAManga.Models.Banner>

@{
    ViewData["Title"] = "Quản lý Banner";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Tạo mới
        </a>
    </div>

    <!-- Bảng hiển thị banner -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().ImageUrl)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DisplayOrder)</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="~/@item.LinkUrl" alt="Cover Image" class="img-thumbnail" style="max-width: 70px;">
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                    @(item.IsActive ? "Kích hoạt" : "Không kích hoạt")
                                </span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.DisplayOrder)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">Không có banner nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>