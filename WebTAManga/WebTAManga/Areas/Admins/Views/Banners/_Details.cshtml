@model WebTAManga.Models.Banner

<div class="form-group mb-3">
    <label class="control-label">Link URL:</label>
    <img src="~/@Model.LinkUrl" alt="Banner Image" class="img-thumbnail" style="max-width: 300px;" />
</div>
<div class="form-group mb-3">
    <label class="control-label">Tiêu đề:</label>
    <p>@Html.DisplayFor(model => model.Title)</p>
</div>
<div class="form-group mb-3">
    <label class="control-label">Mô tả:</label>
    <p>@Html.DisplayFor(model => model.Description)</p>
</div>

<div class="form-group mb-3">
    <label class="control-label">Trạng thái:</label>
    <p>@(Model.IsActive ? "Kích hoạt" : "Không kích hoạt")</p>
</div>
<div class="form-group mb-3">
    <label class="control-label">Thứ tự hiển thị:</label>
    <p>@Html.DisplayFor(model => model.DisplayOrder)</p>
</div>