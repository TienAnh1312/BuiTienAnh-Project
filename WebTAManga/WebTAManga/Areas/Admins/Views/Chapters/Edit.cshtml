@model WebTAManga.Models.Chapter

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chapter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChapterId" />

            <div class="form-group">
                <label asp-for="StoryId" class="control-label"></label>
                <select asp-for="StoryId" class="form-control" asp-items="ViewBag.StoryId" ></select>
                <span asp-validation-for="StoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChapterTitle" class="control-label"></label>
                <input asp-for="ChapterTitle" class="form-control" />
                <span asp-validation-for="ChapterTitle" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Coins" class="control-label fw-bold">Số xu mở khóa</label>
                <input asp-for="Coins" class="form-control" />
                <span asp-validation-for="Coins" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IsLocked" class="control-label fw-bold">Trạng thái khóa</label>
                <select asp-for="IsLocked" class="form-control">
                    <option value="true">Khóa</option>
                    <option value="false">Mở khóa</option>
                </select>
                <span asp-validation-for="IsLocked" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" asp-route-storyId="@Model.StoryId" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Admins" asp-controller="Stories" asp-action="Edit" asp-route-id="@Model.StoryId">Quay lại chỉnh sửa Story</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
