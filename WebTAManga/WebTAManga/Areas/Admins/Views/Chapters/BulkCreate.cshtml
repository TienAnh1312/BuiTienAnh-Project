@model WebTAManga.Models.Chapter

@{
    ViewData["Title"] = "BulkCreate";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["Error"]
    </div>
}

<div class="container mt-4">
    <h1 class="mb-4">Thêm Nhiều Chapter</h1>
    <h4 class="text-muted">Truyện: @ViewBag.StoryTitle</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="BulkCreate" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" name="storyId" value="@ViewBag.StoryId" />

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Chapter bắt đầu</label>
                    <input name="startChapter" class="form-control" type="number" min="1" value="1" required />
                    <small class="form-text text-muted">Nhập số chapter bắt đầu (ví dụ: 1)</small>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Chapter kết thúc</label>
                    <input name="endChapter" class="form-control" type="number" min="1" value="1" required />
                    <small class="form-text text-muted">Nhập số chapter kết thúc (ví dụ: 40)</small>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Số xu mặc định</label>
                    <input name="defaultCoins" class="form-control" type="number" min="0" value="0" />
                    <small class="form-text text-muted">Số xu để mở khóa mỗi chapter</small>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label fw-bold">Trạng thái khóa</label>
                    <select name="defaultIsLocked" class="form-control">
                        <option value="true">Khóa</option>
                        <option value="false" selected>Mở khóa</option>
                    </select>
                    <small class="form-text text-muted">Trạng thái mặc định cho các chapter</small>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-plus-square"></i> Tạo Chapters
                    </button>
                    <a asp-action="Index" asp-route-storyId="@ViewBag.StoryId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}