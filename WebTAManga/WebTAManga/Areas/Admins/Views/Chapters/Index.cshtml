@model IEnumerable<WebTAManga.Models.Chapter>

@{
    ViewData["Title"] = "Chapters of " + ViewBag.StoryTitle;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Chapters of "@ViewBag.StoryTitle"</h2>
        <a asp-action="Create" asp-route-storyId="@ViewBag.StoryId" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New Chapter
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ChapterTitle)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.ChapterTitle)</td>  
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ChapterId" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ChapterId" class="btn btn-info btn-sm text-white">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ChapterId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            <a asp-controller="ChapterImages" asp-action="Index" asp-route-chapterId="@item.ChapterId" class="btn btn-primary btn-sm">
                                <i class="bi bi-image"></i> Edit Images
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-controller="Stories" asp-action="Index" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Back to Stories
    </a>
</div>

<!-- Thêm Bootstrap Icons nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">