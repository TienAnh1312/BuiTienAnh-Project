@model IEnumerable<WebTAManga.Models.ChapterImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageNumber)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Chapter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/@Url.Content(item.ImageUrl)" alt="Current Image" class="img-fluid rounded" style="max-width: 3rem;" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PageNumber)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Chapter.ChapterId)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ImageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ImageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ImageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
