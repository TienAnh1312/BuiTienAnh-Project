@model IEnumerable<WebTAManga.Models.ChapterImage>

<h2>Chapter Images</h2>

<p>
    <a asp-action="Create" asp-route-chapterId="@ViewData["ChapterId"]" class="btn btn-primary">Add New Image</a>
</p>

<table class="table">
    <tr>
        <th>Page Number</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PageNumber</td>
            <td><img src="~/@item.ImageUrl" width="100" /></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ImageId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ImageId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

<a asp-action="Index" asp-controller="Stories" class="btn btn-secondary">Back to Stories</a>
