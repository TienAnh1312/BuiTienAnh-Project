@model WebTAManga.Models.Chapter

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Chapter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoryId" />

            <div class="form-group">
                <label class="control-label">Số chương</label>
                @{
                    int chapterNumber = 1; 
                    if (!string.IsNullOrEmpty(Model.ChapterTitle) && Model.ChapterTitle.StartsWith("Chương "))
                    {
                        int.TryParse(Model.ChapterTitle.Replace("Chương ", ""), out chapterNumber);
                    }
                }
                <input name="chapterNumber" class="form-control" type="number" min="1" value="@chapterNumber" required />
                <span class="text-danger" data-valmsg-for="chapterNumber"></span>
            </div>

            <div class="form-group">
                <label>Chọn nhiều ảnh (nếu có)</label>
                <input type="file" name="ImageFiles" class="form-control" multiple />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-storyId="@Model.StoryId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}