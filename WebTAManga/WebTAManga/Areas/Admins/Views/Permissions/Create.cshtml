@model WebTAManga.Models.ManagerPermission
@using WebTAManga.Models

@{
    ViewData["Title"] = "Thêm quyền mới";
    var modules = ViewData["Modules"] as List<string>;
}

<h1>Thêm quyền mới</h1>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="AdminId" />
    <input type="hidden" asp-for="AssignedBy" />

    <div class="form-group">
        <label asp-for="Module" class="control-label"></label>
        <select asp-for="Module" class="form-control">
            @foreach (var module in modules)
            {
                <option value="@module">@module</option>
            }
        </select>
    </div>

    <div class="form-group form-check">
        <input asp-for="CanView" class="form-check-input" type="checkbox" />
        <label asp-for="CanView" class="form-check-label">Có thể xem</label>
    </div>
    <div class="form-group form-check">
        <input asp-for="CanCreate" class="form-check-input" type="checkbox" />
        <label asp-for="CanCreate" class="form-check-label">Có thể thêm</label>
    </div>
    <div class="form-group form-check">
        <input asp-for="CanEdit" class="form-check-input" type="checkbox" />
        <label asp-for="CanEdit" class="form-check-label">Có thể sửa</label>
    </div>
    <div class="form-group form-check">
        <input asp-for="CanDelete" class="form-check-input" type="checkbox" />
        <label asp-for="CanDelete" class="form-check-label">Có thể xóa</label>
    </div>

    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
        <a asp-action="Index" asp-route-adminId="@Model.AdminId" class="btn btn-secondary">Quay lại</a>
    </div>
</form>