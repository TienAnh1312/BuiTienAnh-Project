@model IEnumerable<WebTAManga.Models.Admin>

@{
    ViewData["Title"] = "Admin Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Password</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>••••••••</td> <!-- Ẩn mật khẩu để bảo mật -->
                        <td>
                            <span class="badge
                                @(item.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                @Html.DisplayFor(modelItem => item.Role)
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.AdminId" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.AdminId" class="btn btn-info btn-sm text-white">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.AdminId" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
