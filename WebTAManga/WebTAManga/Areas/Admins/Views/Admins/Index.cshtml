@model WebTAManga.Areas.Admins.Controllers.AdminIndexView

@{
    ViewData["Title"] = "Quản lý Admin";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Tạo mới
        </a>
    </div>

    <!-- Form tìm kiếm -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchUsername" value="@Model.SearchUsername"
                       class="form-control" placeholder="Tìm theo Tên " />
            </div>
            <div class="col-md-4">
                <input type="text" name="searchEmail" value="@Model.SearchEmail"
                       class="form-control" placeholder="Tìm theo Email" />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-clockwise"></i> Đặt lại
                </a>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Admins[0].Username)</th>
                    <th>@Html.DisplayNameFor(model => model.Admins[0].Email)</th>
                    <th>Mật khẩu</th>
                    <th>@Html.DisplayNameFor(model => model.Admins[0].Role)</th> 
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Admins != null && Model.Admins.Any())
                {
                    @foreach (var item in Model.Admins)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Username)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>••••••••</td>
                            <td>
                                <span class="badge @(item.Role == "Admin" ? "bg-danger" : "bg-primary")">
                                    @Html.DisplayFor(modelItem => item.Role)
                                </span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.AdminId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.AdminId" class="btn btn-info btn-sm text-white">
                                    <i class="bi bi-eye"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.AdminId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">Không tìm thấy admin nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-searchUsername="@Model.SearchUsername"
                   asp-route-searchEmail="@Model.SearchEmail"
                   aria-label="Previous">
                    <span aria-hidden="true">«</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchUsername="@Model.SearchUsername"
                       asp-route-searchEmail="@Model.SearchEmail">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-searchUsername="@Model.SearchUsername"
                   asp-route-searchEmail="@Model.SearchEmail"
                   aria-label="Next">
                    <span aria-hidden="true">»</span>
                </a>
            </li>
        </ul>
    </nav>
</div>