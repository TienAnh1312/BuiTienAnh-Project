@model WebTAManga.Areas.Admins.Controllers.AdminIndexView

<h2>Admins</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchUsername">Username:</label>
        <input type="text" id="searchUsername" name="searchUsername" value="@Model.SearchUsername" class="form-control" />
    </div>
    <div class="form-group">
        <label for="searchEmail">Email:</label>
        <input type="text" id="searchEmail" name="searchEmail" value="@Model.SearchEmail" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model.Admins)
        {
            <tr>
                <td>@admin.Username</td>
                <td>@admin.Email</td>
                <td>@admin.RoleNavigation?.RoleName</td>
                <td>@admin.CreatedAt?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@admin.AdminId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@admin.AdminId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@admin.AdminId" class="btn btn-danger btn-sm">Delete</a>       
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-action="Index" asp-route-page="@i" asp-route-searchUsername="@Model.SearchUsername" asp-route-searchEmail="@Model.SearchEmail" class="btn btn-sm @(Model.CurrentPage == i ? "btn-primary" : "btn-secondary")">@i</a>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}