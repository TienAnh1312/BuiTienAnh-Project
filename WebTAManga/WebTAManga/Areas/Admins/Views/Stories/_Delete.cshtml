@model WebTAManga.Models.Story

<div class="container">
    <h4>Xóa Truyện</h4>
    <hr />
    <p>Bạn có chắc muốn xóa truyện <strong>@Model.Title</strong> không?</p>
    <dl class="row">
        <dt class="col-sm-3">Tiêu đề</dt>
        <dd class="col-sm-9">@Model.Title</dd>
        <dt class="col-sm-3">Tác giả</dt>
        <dd class="col-sm-9">@Model.Author</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="StoryId" />
        @Html.AntiForgeryToken()
    </form>
</div>