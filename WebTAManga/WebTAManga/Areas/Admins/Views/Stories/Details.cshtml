@model WebTAManga.Models.Story

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Title</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="~/@Model.CoverImage" alt="Cover Image" class="img-fluid rounded shadow-sm" style="max-width: 100%;">
                </div>
                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Author</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.Raw(Model.Description)</dd>

                        <dt class="col-sm-3">Created At</dt>
                        <dd class="col-sm-9">@(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy") : "N/A")</dd>

                        <dt class="col-sm-3">Total Chapters</dt>
                        <dd class="col-sm-9">@(Model.Chapters?.Count ?? 0)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>