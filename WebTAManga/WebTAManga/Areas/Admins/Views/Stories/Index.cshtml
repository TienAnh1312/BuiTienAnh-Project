@model IEnumerable<WebTAManga.Models.Story>

@{
    ViewData["Title"] = "Story List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Story List</h2>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Cover</th>
                    <th>Created At</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Author)</td>
                        <td class="text-center">
                            <img src="~/@item.CoverImage" alt="Cover Image" class="img-thumbnail" style="max-width: 70px;">
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.StoryId" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@item.StoryId" class="btn btn-info btn-sm text-white"><i class="bi bi-info-circle"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@item.StoryId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                            <a asp-controller="Chapters" asp-action="Index" asp-route-storyId="@item.StoryId" class="btn btn-primary btn-sm">Chapters</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


