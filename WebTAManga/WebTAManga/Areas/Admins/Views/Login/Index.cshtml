@model WebTAManga.Areas.Admins.Models.LoginAdmins

@{
    Layout = null;
}
<style>
    /* Custom background for the page */
    body {
        
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-box {
        width: 360px;
        padding: 40px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        background-color: #fff;
    }

    .login-box .card-header {
        background-color: #fff;
        border-bottom: 2px solid #f1f1f1;
    }

    .login-box .card-header a {
        font-size: 1.5rem;
        color: #007bff;
    }

    .login-box .form-control {
        border-radius: 5px;
        height: 35px;
    }

    .login-box .input-group-text {
        background-color: #f8f9fa;
        border-radius: 0 20px 20px 0;
    }

    .login-box .btn {
        border-radius: 5px;
        height: 45px;
    }

    .login-box .social-auth-links a {
        border-radius: 20px;
        margin-bottom: 10px;
    }

    .login-box .social-auth-links i {
        margin-right: 10px;
    }

    .login-box .mt-3 {
        text-align: center;
        color: #007bff;
    }

    .login-box .text-muted {
        font-size: 0.9rem;
    }

    .login-box .text-danger {
        font-size: 0.85rem;
    }

    .login-box p {
        font-size: 0.85rem;
    }

    .login-box a {
        color: #007bff;
    }

    .login-box a:hover {
        text-decoration: underline;
    }

}
</style>
<body class="login-page bg-light" style="min-height: 100vh;">
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="login-box shadow-lg p-4 bg-white rounded">

            <div class="card card-outline card-primary border-0">
                <div class="card-header text-center">
                    <a href="" class="h1 text-primary"><b>Admin</b>LTE</a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg text-muted">Sign in to start your session</p>

                    <form action="" method="post">
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" asp-for="Email" placeholder="Email" required value="buitienanh13122003@gmail.com">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="text-danger mb-2">
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="input-group mb-3">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password" required value="12345@@">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="text-danger mb-3">
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="row align-items-center">
                            <div class="col-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="Remember" id="remember">
                                    <label class="form-check-label" for="remember">
                                        Remember Me
                                    </label>
                                </div>
                            </div>
                            <div class="col-6 text-right">
                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </div>
                        </div>
                    </form>

                  @*   <div class="social-auth-links text-center mt-3">
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                        </a>
                    </div>

                    <p class="mt-3 mb-1">
                        <a href="forgot-password.html" class="text-decoration-none">I forgot my password</a>
                    </p>
                    <p class="mb-0">
                        <a href="register.html" class="text-decoration-none">Register a new membership</a>
                    </p> *@
                </div>

            </div>

        </div>
    </div>
</body>
