@model IEnumerable<WebTAManga.Models.Sticker>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td class="text-center">
                    <img src="~/@item.ImagePath" alt="Cover Image" class="img-thumbnail" style="max-width: 70px;">
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StickerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StickerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StickerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
