@model WebTAManga.Areas.Admins.Models.UserCommentViewModel

@{
    ViewData["Title"] = $"Comments by {Model.User.Username}";
}

<div class="container mt-4">
    <h2 class="text-primary">@ViewData["Title"]</h2>
    <h5>Email: @Model.User.Email</h5>

    <div class="mt-3">
        <h4>Stories commented on:</h4>
        <ul class="list-group">
            @foreach (var story in Model.Stories)
            {
                <li class="list-group-item">
                    <a asp-action="UserStoryComments" asp-route-userId="@Model.User.UserId" asp-route-storyId="@story.StoryId">
                        @story.Title
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
