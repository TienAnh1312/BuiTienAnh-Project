@model WebTAManga.Models.CategoryRank

<form asp-action="CreateCategoryRank">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RankId" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Levels (Exp Required)</label>
        <div id="levels-container">
            <div class="level-input">
                <input type="number" name="expRequired" class="form-control mb-2" placeholder="Nhập kinh nghiệm cần đạt" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}