@model WebTAManga.Models.AvatarFrame

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AvatarFrame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AvatarFrameId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="~/@Model.ImagePath" alt="Current Image" class="img-thumbnail" style="max-width: 100px;" />
                }
                else
                {
                    <p>No image available</p>
                }
            </div>
            <div class="form-group">
                <label class="control-label">Upload New Image (optional)</label>
                <input type="file" name="file" class="form-control" accept="image/*" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}