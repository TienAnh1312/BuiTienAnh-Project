@model WebTAManga.Areas.Admins.Controllers.AvatarFrameIndexView

@{
    ViewData["Title"] = "Quản lý Khung Avatar";
    int stt = ((Model?.CurrentPage ?? 1) - 1) * 7 + 1;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Tạo mới
        </a>
    </div>

    <!-- Form tìm kiếm -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchName" value="@Model.SearchName"
                       class="form-control" placeholder="Tìm theo tên khung" />
            </div>
            <div class="col-md-4">
                <select name="searchPriceRange" class="form-select">
                    <option value="">Tất cả giá</option>
                    <option value="0-100" @@(Model.SearchPriceRange == "0-100" ? "selected" : "")>0 - 100</option>
                    <option value="101-500" @@(Model.SearchPriceRange == "101-500" ? "selected" : "")>101 - 500</option>
                    <option value="501+" @@(Model.SearchPriceRange == "501+" ? "selected" : "")>501+</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search" title="Tìm kiếm"></i>
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-clockwise" title="Đặt lại"></i>
                </a>
            </div>
        </div>
    </form>

    <!-- Success message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr class="text-center">
                    <th style="width: 50px;">STT</th>
                    <th>Tên khung viền</th>
                    <th style="width: 100px;">Hình ảnh</th>
                    <th>Giá</th>
                    <th style="width: 162px;" class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody class="action">
                @if (Model.AvatarFrames != null && Model.AvatarFrames.Any())
                {
                    @foreach (var item in Model.AvatarFrames)
                    {
                        <tr>
                            <td class=" text-center">@stt</td>
                            <td class="">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-center">
                                <img src="~/@item.ImagePath" alt="@item.Name" class="img-thumbnail" style="max-width: 70px;">
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Price) Xu</td>
                            <td class=" text-center">
                                <a asp-action="Edit" asp-route-id="@item.AvatarFrameId" class="btn btn-warning btn-sm me-1" title="Sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.AvatarFrameId" class="btn btn-info btn-sm me-1 text-white" title="Chi tiết">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.AvatarFrameId" class="btn btn-danger btn-sm" title="Xóa"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa khung avatar này?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                        stt++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Không tìm thấy khung avatar nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    <nav aria-label="Phân trang">
        <ul class="pagination justify-content-center">
            <!-- Nút Previous -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-searchName="@Model.SearchName"
                   asp-route-searchPriceRange="@Model.SearchPriceRange"
                   aria-label="Trước">
                    <span aria-hidden="true">«</span>
                </a>
            </li>

            <!-- Trang đầu tiên -->
            <li class="page-item @(Model.CurrentPage == 1 ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="1"
                   asp-route-searchName="@Model.SearchName"
                   asp-route-searchPriceRange="@Model.SearchPriceRange">1</a>
            </li>

            <!-- Dấu ... nếu cần -->
            @if (Model.CurrentPage > 3)
            {
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            }

            <!-- Các trang gần trang hiện tại -->
            @for (int i = Math.Max(2, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages - 1, Model.CurrentPage + 2); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchName="@Model.SearchName"
                       asp-route-searchPriceRange="@Model.SearchPriceRange">@i</a>
                </li>
            }

            <!-- Dấu ... nếu cần -->
            @if (Model.CurrentPage < Model.TotalPages - 2)
            {
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            }

            <!-- Trang cuối cùng -->
            @if (Model.TotalPages > 1)
            {
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@Model.TotalPages"
                       asp-route-searchName="@Model.SearchName"
                       asp-route-searchPriceRange="@Model.SearchPriceRange">@Model.TotalPages</a>
                </li>
            }

            <!-- Nút Next -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-searchName="@Model.SearchName"
                   asp-route-searchPriceRange="@Model.SearchPriceRange"
                   aria-label="Tiếp">
                    <span aria-hidden="true">»</span>
                </a>
            </li>
        </ul>
    </nav>
</div>