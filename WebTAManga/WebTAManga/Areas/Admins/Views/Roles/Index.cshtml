@model WebTAManga.Areas.Admins.Controllers.RoleIndexView

@{
    ViewData["Title"] = "Danh sách vai trò";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Thêm vai trò mới
        </a>
    </div>

    <!-- Form tìm kiếm -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row g-3">
            <div class="col-md-6">
                <input type="text" name="searchRoleName" value="@Model.SearchRoleName"
                       class="form-control" placeholder="Tìm theo Tên vai trò hoặc Mô tả" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search" title="Tìm kiếm"></i>
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-clockwise" title="Đặt lại"></i>
                </a>
            </div>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr class="text-center">
                    <th >@Html.DisplayNameFor(model => model.Roles[0].RoleName)</th>
                    <th style="width: 162px;" class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody class="action">
                @if (Model.Roles != null && Model.Roles.Any())
                {
                    @foreach (var item in Model.Roles)
                    {
                        <tr>
                            <td class="">@Html.DisplayFor(modelItem => item.RoleName)</td>
                            <td class="action text-center">
                                <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square" title="Sửa"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-info btn-sm me-1 text-white">
                                    <i class="bi bi-info-circle" title="Chi tiết"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa vai trò này?');">
                                    <i class="bi bi-trash" title="Xóa"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">Không tìm thấy vai trò nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    <nav aria-label="Phân trang">
        <ul class="pagination justify-content-center">
            <!-- Nút Previous -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-searchRoleName="@Model.SearchRoleName"
                   aria-label="Trước">
                    <span aria-hidden="true">«</span>
                </a>
            </li>

            <!-- Trang đầu tiên -->
            <li class="page-item @(Model.CurrentPage == 1 ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="1"
                   asp-route-searchRoleName="@Model.SearchRoleName">1</a>
            </li>

            <!-- Dấu ... nếu cần -->
            @if (Model.CurrentPage > 3)
            {
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            }

            <!-- Các trang gần trang hiện tại -->
            @for (int i = Math.Max(2, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages - 1, Model.CurrentPage + 2); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-searchRoleName="@Model.SearchRoleName">@i</a>
                </li>
            }

            <!-- Dấu ... nếu cần -->
            @if (Model.CurrentPage < Model.TotalPages - 2)
            {
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            }

            <!-- Trang cuối cùng -->
            @if (Model.TotalPages > 1)
            {
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@Model.TotalPages"
                       asp-route-searchRoleName="@Model.SearchRoleName">@Model.TotalPages</a>
                </li>
            }

            <!-- Nút Next -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-searchRoleName="@Model.SearchRoleName"
                   aria-label="Tiếp">
                    <span aria-hidden="true">»</span>
                </a>
            </li>
        </ul>
    </nav>
</div>