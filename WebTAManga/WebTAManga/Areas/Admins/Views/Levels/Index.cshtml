@model IEnumerable<WebTAManga.Models.Level>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryRank)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpRequired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryRank.CategoryRankId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LevelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LevelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LevelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
