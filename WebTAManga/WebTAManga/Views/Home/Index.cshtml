@model IEnumerable<WebTAManga.Models.Story>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    .image-container {
        position: relative;
        width: 100%;
        height: 25rem; /* Chiều cao ảnh */
        overflow: hidden;
    }

    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.5); /* Màu nền mờ */
        color: white;
        padding: 10px;
        text-align: center;
        opacity: 1; /* Tiêu đề luôn hiển thị */
    }

    .card-title {
        margin: 0;
    }

</style>

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card comic-card">
                    <a href="@Url.Action("Details", "Home", new { id = item.StoryId })">
                        <div class="image-container">
                            <img src="~/@item.CoverImage" class="card-img-top w-100" alt="Comic Cover" style="object-fit: cover; height: 25rem;">
                            <div class="overlay">
                                <h5 class="card-title">@item.Title</h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>