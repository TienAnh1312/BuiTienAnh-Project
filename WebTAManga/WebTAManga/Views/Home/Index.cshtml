@model IEnumerable<WebTAManga.Models.Story>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <!-- Banner -->
    <div class="banner">
        <div class="banner-text">
            <h1 class="banner-title">Truyện Cập Nhật Nhanh - Tặng Quà Miễn Phí</h1>
        </div>
    </div>

    <!-- Cập Nhật Gần Đây -->
    <h3 class="section-title">Cập Nhật Gần Đây</h3>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)  
            {
                <div class="col-6 col-md-3 mb-3">
                    <div class="comic-card">
                        <a href="@Url.Action("Details", "Home", new { id = item.StoryId })">
                            <img src="~/@item.CoverImage" class="card-img-top w-100" alt="@item.Title">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                         
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Không có truyện nào để hiển thị.</p>
        }
    </div>
    <a href="#" class="see-more">Xem Thêm <i class="fas fa-arrow-right"></i></a>
</div>