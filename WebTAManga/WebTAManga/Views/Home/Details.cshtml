                                    {
                                        @foreach (var user in ViewBag.TopCoinsAllTime)
                                        {
                                            <li>
                                                <div class="rating-item d-flex align-items-center">
                                                    <div class="rating-item__number bg-danger rounded-circle"><span class="text-light">@user.Rank</span></div>
                                                    <div class="rating-item__story">
                                                        <span class="text-decoration-none hover-title rating-item__story--name text-one-row">@user.Username</span>
                                                        <div class="d-flex flex-wrap rating-item__story--categories">
                                                            <span class="text-dark">Xu tiêu: @user.CoinsSpent</span>
                                                        </div>
                                                    </div>
