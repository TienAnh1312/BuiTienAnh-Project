@model WebTAManga.Models.Story
@{
    var ReadingHistories = ViewBag.ReadingHistories as List<WebTAManga.Models.ReadingHistory>;
    var currentTime = DateTime.Now; 
}

<link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />

<!-- Hiển thị thông báo -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["InfoMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["CommentSuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["CommentSuccessMessage"]
    </div>
}

<style>
    /* Màn hình lớn (Desktop, >1200px) */
    @@media (min-width: 1200px) {
        .text-ellipsis {
            max-width: 150px;
        }

        .text-one-row {
            max-width: 240px;
        }
    }

    /* Màn hình trung bình lớn (Laptop, 992px - 1199px) */
    @@media (min-width: 992px) and (max-width: 1199px) {
        .text-ellipsis {
            max-width: 60px;
        }

        .text-one-row {
            max-width: 140px;
        }
    }

    /* Màn hình trung bình (Tablet, 768px - 991px) */
    @@media (min-width: 768px) and (max-width: 991px) {
        .text-ellipsis {
            max-width: 100px;
        }

        .text-one-row {
            max-width: 120px;
        }
    }

    /* Màn hình nhỏ (Mobile lớn, 576px - 767px) */
    @@media (min-width: 576px) and (max-width: 767px) {
        .text-ellipsis {
            max-width: 150px;
        }

        .text-one-row {
            max-width: 300px;
        }
    }

    @@media (max-width: 575px) {
        .text-ellipsis {
            max-width: 150px;
        }

        .text-one-row {
            max-width: 220px;
        }
    }
</style>

<main>
    <input type="hidden" id="story_slug">
    <div class="container">
        <div class="row align-items-start">
            <div class="col-12 col-md-7 col-lg-8">
                <div class="head-title-global d-flex justify-content-between mb-4">
                    <div class="col-12 col-md-12 col-lg-4 head-title-global__left d-flex">
                        <h2 class="me-2 mb-0 border-bottom border-secondary pb-1">
                            <span class="d-block text-decoration-none text-dark fs-4 title-head-name" title="Thông tin truyện">
                                Thông tin truyện
                            </span>
                        </h2>
                    </div>
                </div>

                <div class="story-detail">
                    <div class="story-detail__top d-flex align-items-start">
                        <div class="row align-items-start">
                            <div class="col-12 col-md-12 col-lg-3 story-detail__top--image">
                                <div class="book-3d">
                                    <img src="~/@Model.CoverImage" alt="@Model.Title" class="img-fluid w-100" width="200" height="300" loading="lazy">
                                </div>
                            </div>
                            <div class="col-12 col-md-12 col-lg-9">
                                <h3 class="text-center story-name">@Model.Title</h3>
                                <div class="story-metrics d-flex justify-content-center mb-3">
                                    <div class="metric-item d-flex align-items-center me-3">
                                        <i class="bi bi-star-fill" style=" color: #ffd700;"></i>
                                        <span class="ms-2">@ViewBag.FavoriteCount</span>
                                    </div>
                                    <div class="metric-item d-flex align-items-center me-3">
                                        <i class="bi bi-eye-fill" style=" color: #000;"></i> 
                                        <span class="ms-2">@ViewBag.ViewCount</span>
                                    </div>
                                    <div class="metric-item d-flex align-items-center">
                                        <i class="bi bi-person-fill" style=" color: #000;"></i>
                                        <span class="ms-2">@ViewBag.FollowerCount</span>
                                    </div>
                                </div>
                                <div class="rate-story mb-2">
                                    <em class="rate-story__text"></em>
                                    <div class="rate-story__value" itemprop="aggregateRating" itemscope="" itemtype="https://schema.org/AggregateRating">
                                        <em>
                                            Đánh giá:
                                            <strong><span itemprop="ratingValue">7.0</span></strong>
                                            / <span itemprop="bestRating">10</span>
                                            từ <strong><span itemprop="ratingCount">415</span> lượt</strong>
                                        </em>
                                    </div>
                                </div>
                                <div class="story-detail__top--desc px-3" style="max-height: 144px; overflow: hidden;" id="description">
                                    @Html.Raw(Model.Description)
                                </div>
                                <div class="text-center mt-2">
                                    <button class="btn btn-link text-decoration-none" id="toggleDescription">Xem thêm</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="story-detail__bottom mb-3">
                        <div class="row">
                            <div class="col-12 col-md-12 col-lg-3 story-detail__bottom--info">
                                <p class="mb-1">
                                    <strong>Tác giả:</strong>
                                    <a href="#" class="text-decoration-none text-dark hover-title">@Model.Author</a>
                                </p>
                                <div class="d-flex align-items-center mb-1 flex-wrap">
                                    <strong class="me-1">Thể loại:</strong>
                                    <div class="d-flex align-items-center flex-wrap">
                                        @foreach (var storyGenre in Model.StoryGenres)
                                        {
                                            <a href="@Url.Action("StoriesByGenre", "Home", new { genreId = storyGenre.GenreId })"
                                               class="text-decoration-none text-dark hover-title me-1"
                                               style="width: max-content;">
                                                @storyGenre.Genre.Name
                                            </a>
                                            @if (!EqualityComparer<WebTAManga.Models.Genre>.Default.Equals(storyGenre.Genre, Model.StoryGenres.LastOrDefault()?.Genre))
                                            {
                                                <span>, </span>
                                            }
                                        }
                                    </div>
                                </div>
                                <p class="mb-1">
                                    <strong>Trạng thái:</strong>
                                    <span class="text-info">Full</span>
                                </p>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-warning btn-sm toggle-favorite" data-story-id="@Model.StoryId" data-is-favorited="@ViewBag.IsFavorited.ToString().ToLower()">
                                        <i class="fas fa-star"></i> @(ViewBag.IsFavorited ? "Bỏ Yêu Thích" : "Yêu Thích")
                                    </button>
                                    <button class="btn btn-success btn-sm toggle-follow" data-story-id="@Model.StoryId" data-is-followed="@ViewBag.IsFollowed.ToString().ToLower()">
                                        <i class="fas fa-check"></i> @(ViewBag.IsFollowed ? "Bỏ Theo Dõi" : "Theo Dõi")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Danh sách chapter *@
                    <div class="story-detail__list-chapter">
                        <div class="head-title-global d-flex justify-content-between align-items-center mb-4">
                            <div class="head-title-global__left">
                                <h2 class="mb-0 border-bottom border-secondary pb-1">
                                    <span class="d-block text-decoration-none text-dark fs-4 title-head-name" title="Danh sách chương">
                                        Danh sách chương
                                    </span>
                                </h2>
                            </div>
                        </div>

                        <div class="story-detail__list-chapter--list">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <ul class="chapter-list list-unstyled" style="max-height: 400px; overflow-y: auto;">
                                        @foreach (var chapter in ((IEnumerable<WebTAManga.Models.Chapter>)Model.Chapters).OrderByDescending(c =>
                                        int.TryParse(c.ChapterTitle?.Replace("Chương ", ""), out int num) ? num : 0))
                                        {
                                            bool isRead = ReadingHistories != null && ReadingHistories.Any(x => x.ChapterId == chapter.ChapterId);
                                            bool isPurchased = ViewBag.PurchasedChapters != null &&
                                            ((List<WebTAManga.Models.PurchasedChapter>)ViewBag.PurchasedChapters)?.Any(pc => pc.ChapterId == chapter.ChapterId && pc.UserId == ViewBag.CurrentUserId) == true;
                                            bool isLocked = chapter.IsLocked == true && !isPurchased;

                                            <li class="chapter-item mb-2">
                                                <a href="@Url.Action("ReadChapter", "ReadChapter", new { id = chapter.ChapterId })"
                                                   class="text-decoration-none text-dark hover-title d-flex align-items-center justify-content-between">
                                                    <span>@chapter.ChapterTitle</span>
                                                    <span class="chapter-status">
                                                        @if (isRead)
                                                        {
                                                            <i class="fas fa-eye text-success ms-2" title="Đã đọc"></i>
                                                        }
                                                        @if (isLocked)
                                                        {
                                                            <i class="fas fa-lock text-danger ms-2" title="Chapter này bị khóa"></i>
                                                        }
                                                    </span>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Truyện Có Nhiều Lượt Xem -->
            <div class="col-12 col-md-5 col-lg-4" style="background-color:white">
                <div class="top-ratings p-3 rounded shadow-sm">
                    <h4 class="mb-2 text-center text-md-start" style="font-size: 20px;">Top Lượt Xem</h4>
                    <hr />
                    <div class="top-ratings__tab mb-2">
                        <div class="list-group list-group-horizontal justify-content-center justify-content-md-start" id="views-tab" role="tablist">
                            <a class="list-group-item list-group-item-action active" id="views-all-time-list" data-bs-toggle="list" href="#views-all-time" role="tab" aria-controls="views-all-time">All</a>
                            <a class="list-group-item list-group-item-action" id="views-month-list" data-bs-toggle="list" href="#views-month" role="tab" aria-controls="views-month">Tháng</a>
                            <a class="list-group-item list-group-item-action" id="views-day-list" data-bs-toggle="list" href="#views-day" role="tab" aria-controls="views-day">Ngày</a>
                        </div>
                    </div>

                    <div class="top-ratings__content" style="padding: 17px 0;">
                        <div class="tab-content" id="views-tabContent">
                            <!-- Top Views Tổng Thể -->
                            <div class="tab-pane fade show active" id="views-all-time" role="tabpanel" aria-labelledby="views-all-time-list">
                                <ul class="list-unstyled">
                                    @if (ViewBag.TopViewsAllTime != null)
                                    {
                                        @foreach (var story in ViewBag.TopViewsAllTime)
                                        {
                                            <li class="mb-2">
                                                <div class="rating-item d-flex align-items-center">
                                                    <div class="rating-item__number bg-danger rounded-circle text-light d-flex align-items-center justify-content-center me-2" style="width: 25px; height: 25px; font-size: 14px;">@story.Rank</div>
                                                    <div class="rating-item__image me-2">
                                                        <img src="~/@story.CoverImage" alt="@story.Title" class="img-fluid rounded shadow-sm" style="width: 40px; height: 60px; object-fit: cover;" loading="lazy">
                                                    </div>
                                                    <div class="rating-item__story flex-grow-1">
                                                        <a href="@Url.Action("Details", "Home", new { id = story.StoryId })" class="text-decoration-none rating-item__story--name text-one-row hover-title">@story.Title</a>
                                                        <div class="rating-item__story--categories small text-muted d-flex flex-wrap">
                                                            <span class="me-2 text-bg-info">@story.ChapterNumber</span>
                                                            <span><i class="bi bi-eye"></i> @story.Views</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="text-center text-muted">Không có dữ liệu</li>
                                    }
                                </ul>
                            </div>

                            <!-- Top Views theo tháng -->
                            <div class="tab-pane fade" id="views-month" role="tabpanel" aria-labelledby="views-month-list">
                                <ul class="list-unstyled">
                                    @if (ViewBag.TopViewsByMonth != null)
                                    {
                                        @foreach (var story in ViewBag.TopViewsByMonth)
                                        {
                                            <li class="mb-2">
                                                <div class="rating-item d-flex align-items-center">
                                                    <div class="rating-item__number bg-danger rounded-circle text-light d-flex align-items-center justify-content-center me-2" style="width: 25px; height: 25px; font-size: 14px;">@story.Rank</div>
                                                    <div class="rating-item__image me-2">
                                                        <img src="~/@story.CoverImage" alt="@story.Title" class="img-fluid rounded shadow-sm" style="width: 40px; height: 60px; object-fit: cover;" loading="lazy">
                                                    </div>
                                                    <div class="rating-item__story flex-grow-1">
                                                        <a href="@Url.Action("Details", "Home", new { id = story.StoryId })" class="text-decoration-none rating-item__story--name text-one-row hover-title">@story.Title</a>
                                                        <div class="rating-item__story--categories small text-muted d-flex flex-wrap">
                                                            <span class="me-2 text-bg-info">@story.ChapterNumber</span>
                                                            <span><i class="bi bi-eye"></i> @story.Views</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="text-center text-muted">Không có dữ liệu</li>
                                    }
                                </ul>
                            </div>

                            <!-- Top Views Theo ngày -->
                            <div class="tab-pane fade" id="views-day" role="tabpanel" aria-labelledby="views-day-list">
                                <ul class="list-unstyled">
                                    @if (ViewBag.TopViewsByDay != null)
                                    {
                                        @foreach (var story in ViewBag.TopViewsByDay)
                                        {
                                            <li class="mb-2">
                                                <div class="rating-item d-flex align-items-center">
                                                    <div class="rating-item__number bg-danger rounded-circle text-light d-flex align-items-center justify-content-center me-2" style="width: 25px; height: 25px; font-size: 14px;">@story.Rank</div>
                                                    <div class="rating-item__image me-2">
                                                        <img src="~/@story.CoverImage" alt="@story.Title" class="img-fluid rounded shadow-sm" style="width: 40px; height: 60px; object-fit: cover;" loading="lazy">
                                                    </div>
                                                    <div class="rating-item__story flex-grow-1">
                                                        <a href="@Url.Action("Details", "Home", new { id = story.StoryId })" class="text-decoration-none rating-item__story--name text-one-row hover-title">@story.Title</a>
                                                        <div class="rating-item__story--categories small text-muted d-flex flex-wrap">
                                                            <span class="me-2 text-bg-info">@story.ChapterNumber</span>
                                                            <span><i class="bi bi-eye"></i> @story.Views</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="text-center text-muted">Không có dữ liệu</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comment Section -->
        <div class="container mt-5">
            <!-- Phần bình luận -->
            <div class="comment-section mt-5">
                <h4><i class="fas fa-comments"></i> Bình luận</h4>

                <!-- Form thêm bình luận -->
                <div class="comment-form mb-4">
                    <form method="post" asp-action="AddComment" asp-controller="Comment">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <textarea class="form-control" name="Content" id="commentContent" placeholder="Viết bình luận của bạn..." required></textarea>
                        </div>
                        <input type="hidden" name="StoryId" value="@Model.StoryId" />
                        <input type="hidden" name="StickerId" id="selectedStickerId" value="" />
                        <div class="sticker-selection mt-2">
                            <label>Chọn nhãn dán (tùy chọn):</label>
                            <div class="sticker-row">
                                @foreach (var sticker in ViewBag.Stickers)
                                {
                                    <img src="~/@sticker.ImagePath" alt="@sticker.Name" class="sticker-icon" data-sticker-id="@sticker.StickerId" style="max-width: 50px; cursor: pointer; margin-right: 10px;" />
                                }
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-paper-plane"></i> Gửi bình luận</button>
                    </form>
                </div>

                <!-- Danh sách bình luận -->
                @if (ViewBag.Comments != null && (ViewBag.Comments as List<WebTAManga.Models.Comment>)?.Any() == true)
                {
                    <ul class="list-group list-unstyled">
                        @foreach (var comment in ViewBag.Comments as List<WebTAManga.Models.Comment>)
                        {
                            var timeSpan = DateTime.Now - (comment.CreatedAt ?? DateTime.MinValue);
                            string timeAgo = timeSpan.TotalMinutes < 60 ? $"{(int)timeSpan.TotalMinutes} phút trước" :
                            timeSpan.TotalHours < 24 ? $"{(int)timeSpan.TotalHours} giờ trước" :
                            timeSpan.TotalDays < 30 ? $"{(int)timeSpan.TotalDays} ngày trước" :
                            timeSpan.TotalDays < 365 ? $"{(int)(timeSpan.TotalDays / 30)} tháng trước" :
                            $"{(int)(timeSpan.TotalDays / 365)} năm trước";

                            <li class="comment" id="comment-@comment.CommentId">
                                <div class="d-flex align-items-start">
                                    <div class="avatar-container me-3">
                                        @if (comment.User?.AvatarFrame != null && !string.IsNullOrEmpty(comment.User.AvatarFrame.ImagePath))
                                        {
                                            <img src="~/@comment.User.AvatarFrame.ImagePath" alt="@comment.User.AvatarFrame.Name" class="avatar-frame" />
                                        }
                                        <img src="~/uploads/avatars/@(string.IsNullOrEmpty(comment.User?.Avatar) ? "default-avatar.png" : comment.User.Avatar)" alt="@comment.User?.Username" class="avatar-img" />
                                    </div>
                                    <div class="flex-grow-1">
                                        <div>
                                            <strong>@(comment.UserId == ViewBag.CurrentUserId ? "Bạn" : comment.User?.Username ?? "Ẩn danh")</strong>
                                            @if (comment.User?.CategoryRank != null)
                                            {
                                                <span class="badge bg-primary ms-2">@comment.User.CategoryRank.Name</span>
                                            }
                                            <span class="text-muted ms-2">(@timeAgo)</span>
                                        </div>
                                        <p class="mt-1 mb-2">@comment.Content</p>
                                        @if (comment.Sticker != null && !string.IsNullOrEmpty(comment.Sticker.ImagePath))
                                        {
                                            <img src="~/@comment.Sticker.ImagePath" alt="@comment.Sticker.Name" style="max-width: 100px; margin-top: 5px;" />
                                        }

                                        <button class="btn btn-reply" onclick="toggleReplyForm(@comment.CommentId, null, '@(comment.User?.Username ?? "Ẩn danh")', @(comment.UserId == ViewBag.CurrentUserId ? "true" : "false"))">
                                            <i class="fas fa-reply"></i> Trả lời
                                        </button>

                                        <div id="replyForm-@comment.CommentId" class="reply-form mt-2" style="display:none;">
                                            @using (Html.BeginForm("ReplyComment", "Comment", FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.Hidden("storyId", Model.StoryId)
                                                @Html.Hidden("parentCommentId", comment.CommentId)
                                                <div class="form-group">
                                                    <textarea class="form-control" name="content" placeholder="Viết câu trả lời của bạn..." required></textarea>
                                                </div>
                                                <div class="sticker-selection mt-2">
                                                    <label>Chọn nhãn dán (tùy chọn):</label>
                                                    <div class="sticker-row">
                                                        @foreach (var sticker in ViewBag.Stickers)
                                                        {
                                                            <img src="~/@sticker.ImagePath" alt="@sticker.Name" class="sticker-icon" data-sticker-id="@sticker.StickerId" style="max-width: 50px; cursor: pointer; margin-right: 10px;" />
                                                        }
                                                    </div>
                                                    <input type="hidden" name="StickerId" id="selectedStickerId-@comment.CommentId" value="" />
                                                </div>
                                                <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-reply"></i> Gửi</button>
                                            }
                                        </div>

                                        @if (comment.InverseParentComment?.Any() == true)
                                        {
                                            <div class="replies-toggle mt-2" >
                                                <button class="toggle-replies" onclick="toggleReplies(@comment.CommentId)">
                                                    <i class="fas fa-caret-down"></i> Hiện @comment.InverseParentComment.Count() bình luận
                                                </button>
                                                <div class="replies mt-3" id="replies-@comment.CommentId" style="display:none;" >
                                                    @foreach (var reply in comment.InverseParentComment)
                                                    {
                                                        var replyTimeSpan = DateTime.Now - (reply.CreatedAt ?? DateTime.MinValue);
                                                        string replyTimeAgo = replyTimeSpan.TotalMinutes < 60 ? $"{(int)replyTimeSpan.TotalMinutes} phút trước" :
                                                        replyTimeSpan.TotalHours < 24 ? $"{(int)replyTimeSpan.TotalHours} giờ trước" :
                                                        replyTimeSpan.TotalDays < 30 ? $"{(int)replyTimeSpan.TotalDays} ngày trước" :
                                                        replyTimeSpan.TotalDays < 365 ? $"{(int)(replyTimeSpan.TotalDays / 30)} tháng trước" :
                                                        $"{(int)(replyTimeSpan.TotalDays / 365)} năm trước";

                                                        <div class="reply">
                                                            <div class="d-flex align-items-start">
                                                                <div class="avatar-container me-3">
                                                                    @if (reply.User?.AvatarFrame != null && !string.IsNullOrEmpty(reply.User.AvatarFrame.ImagePath))
                                                                    {
                                                                        <img src="~/@reply.User.AvatarFrame.ImagePath" alt="@reply.User.AvatarFrame.Name" class="avatar-frame" />
                                                                    }
                                                                    <img src="~/uploads/avatars/@(string.IsNullOrEmpty(reply.User?.Avatar) ? "default-avatar.png" : reply.User.Avatar)" alt="@reply.User?.Username" class="avatar-img" />
                                                                </div>
                                                                <div class="flex-grow-1">
                                                                    <div>
                                                                        <strong>@(reply.UserId == ViewBag.CurrentUserId ? "Bạn" : reply.User?.Username ?? "Ẩn danh")</strong>
                                                                        @if (reply.User?.CategoryRank != null)
                                                                        {
                                                                            <span class="badge bg-primary ms-2">@reply.User.CategoryRank.Name</span>
                                                                        }
                                                                        <span class="text-muted ms-2">(@replyTimeAgo)</span>
                                                                    </div>
                                                                    <p class="mt-1 mb-2">@reply.Content</p>
                                                                    @if (reply.Sticker != null && !string.IsNullOrEmpty(reply.Sticker.ImagePath))
                                                                    {
                                                                        <img src="~/@reply.Sticker.ImagePath" alt="@reply.Sticker.Name" style="max-width: 100px; margin-top: 5px;" />
                                                                    }
                                                                    <button class="btn btn-reply" onclick="toggleReplyForm(@reply.CommentId, @comment.CommentId, '@(reply.User?.Username ?? "Ẩn danh")', @(reply.UserId == ViewBag.CurrentUserId ? "true" : "false"))">
                                                                        <i class="fas fa-reply"></i> Trả lời
                                                                    </button>
                                                                    <div id="replyForm-@reply.CommentId" class="reply-form mt-2" style="display:none;">
                                                                        @using (Html.BeginForm("ReplyComment", "Comment", FormMethod.Post))
                                                                        {
                                                                            @Html.AntiForgeryToken()
                                                                            @Html.Hidden("storyId", Model.StoryId)
                                                                            @Html.Hidden("parentCommentId", reply.CommentId)
                                                                            @Html.Hidden("grandParentCommentId", comment.CommentId)
                                                                            <div class="form-group">
                                                                                <textarea class="form-control" name="content" placeholder="Viết câu trả lời của bạn..." required></textarea>
                                                                            </div>
                                                                            <div class="sticker-selection mt-2">
                                                                                <label>Chọn nhãn dán (tùy chọn):</label>
                                                                                <div class="sticker-row">
                                                                                    @foreach (var sticker in ViewBag.Stickers)
                                                                                    {
                                                                                        <img src="~/@sticker.ImagePath" alt="@sticker.Name" class="sticker-icon" data-sticker-id="@sticker.StickerId" style="max-width: 50px; cursor: pointer; margin-right: 10px;" />
                                                                                    }
                                                                                </div>
                                                                                <input type="hidden" name="StickerId" id="selectedStickerId-@reply.CommentId" value="" />
                                                                            </div>
                                                                            <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-reply"></i> Gửi</button>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>

                    <nav aria-label="Page navigation example" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(ViewBag.CurrentCommentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Details" asp-controller="Home" asp-route-id="@Model.StoryId" asp-route-commentPage="@(ViewBag.CurrentCommentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= ViewBag.TotalCommentPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentCommentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Details" asp-controller="Home" asp-route-id="@Model.StoryId" asp-route-commentPage="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(ViewBag.CurrentCommentPage == ViewBag.TotalCommentPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Details" asp-controller="Home" asp-route-id="@Model.StoryId" asp-route-commentPage="@(ViewBag.CurrentCommentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
                else
                {
                    <p class="no-comment"><i class="fas fa-comment-slash"></i> Chưa có bình luận nào.</p>
                }
            </div>
        </div>
    </div>
</main>
<script>
     // === Xử lý yêu thích (Favorite) ===
    function initFavoriteToggle() {
        $(".toggle-favorite").on("click", function () {
            const button = $(this);
            const storyId = button.data("story-id");
            const isFavorited = button.data("is-favorited") === true;
            const url = isFavorited
                ? "@Url.Action("RemoveFromFavorites", "Favorites")"
                : "@Url.Action("AddToFavorites", "Favorites")";

            $.ajax({
                url: url,
                type: "POST",
                data: { storyId: storyId },
                success: function (response) {
                    if (response.success) {
                        button.data("is-favorited", !isFavorited);
                        button.html(
                            `<i class="fas fa-star"></i> ${isFavorited ? "Yêu Thích" : "Bỏ Yêu Thích"
                            }`
                        );
                        alert(response.message);
                    } else if (response.redirect) {
                        window.location.href = response.redirect;
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("An error occurred. Please try again.");
                },
            });
        });
    }

    // === Xử lý theo dõi (Follow) ===
    function initFollowToggle() {
        $(".toggle-follow").on("click", function () {
            const button = $(this);
            const storyId = button.data("story-id");
            const isFollowed = button.data("is-followed") === true;
            const url = isFollowed
                ? "@Url.Action("Unfollow", "Followed")"
                : "@Url.Action("AddToFollowed", "Followed")";

            $.ajax({
                url: url,
                type: "POST",
                data: { storyId: storyId },
                success: function (response) {
                    if (response.success) {
                        button.data("is-followed", !isFollowed);
                        button.html(
                            `<i class="fas fa-check"></i> ${isFollowed ? "Theo Dõi" : "Bỏ Theo Dõi"}`
                        );
                        alert(response.message);
                    } else if (response.redirect) {
                        window.location.href = response.redirect;
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("An error occurred. Please try again.");
                },
            });
        });
    }
</script>