@{
    ViewData["Title"] = "Nhập mã xác nhận";
    var email = ViewBag.Email ?? "bạn đã đăng ký";
}

<h1>Nhập mã xác nhận</h1>
<hr />

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="alert alert-info" role="alert">
    Vui lòng nhập mã xác nhận đã được gửi đến email <strong>@email</strong>.
</div>

<form asp-action="EnterVerificationCode" method="post">
    <input type="hidden" name="email" value="@email" />
    <div class="form-group">
        <label for="code" class="control-label">Mã xác nhận</label>
        <input type="text" name="code" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Xác nhận" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Create" asp-controller="Users">Quay lại đăng ký</a> |
    <a asp-action="Index" asp-controller="Home">Quay lại trang chủ</a>
</div>