@model WebTAManga.Models.LoginCustomers
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Container for the login page */
    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url('https://wallpapers.com/images/hd/anime-cherry-blossom-background-99q9j0o6ap26ngdx.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        padding: 20px;
        
    }

    /* Card styles */
    .card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 30px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        animation: slideUp 0.5s ease-in-out;
    }

    /* Keyframes for card animation */
    @@keyframes slideUp {
        from {
            transform: translateY(50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Form input styles */
    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 10px;
        font-size: 16px;
        margin-bottom: 15px;
        width: 100%;
        box-sizing: border-box;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        outline: none;
    }

    /* Placeholder styles */
    .form-control::placeholder {
        color: #6c757d;
        opacity: 1;
    }

    /* Button styles */
    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    /* Checkbox styles */
    .form-check {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .form-check-input {
        margin-right: 8px;
    }

    /* Link styles */
    a {
        color: #6c757d;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #007bff;
    }

    /* Heading styles */
    h2 {
        color: #007bff;
        font-weight: bold;
        margin-bottom: 25px;
        font-size: 24px;
        font-family: 'Poppins', sans-serif;
    }

    /* Alert styles */
    .alert {
        max-width: 400px;
        margin: 20px auto;
    }
</style>

<!--  trang login -->
<div class="login-container">
    <div class="card">
        <!-- Thông báo -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center animate__animated animate__fadeIn">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center animate__animated animate__fadeIn">@TempData["ErrorMessage"]</div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger animate__animated animate__shakeX">
                <ul>
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
        <h2>Đăng nhập ngay</h2>
        <form asp-action="Login" method="post">
            <!-- Email input -->
            <div>
                <input asp-for="Email" id="email" type="email" class="form-control" placeholder="Địa chỉ Email" />
            </div>

            <!-- Password input -->
            <div>
                <input asp-for="Password" id="password" type="password" class="form-control" placeholder="Mật khẩu" />
               
            </div>

            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="form2Example33" checked />
                <label class="form-check-label" for="form2Example33">Lưu đăng nhập</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Đăng nhập</button>

            <!-- Forgot Password Link -->
            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="ForgotPassword">Quên mật khẩu?</a>
            </div>
        </form>
    </div>
</div>