@model IEnumerable<K21CNT2_BuiTienAnh_2110900003.Models.Banner>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Tên Banner
            </th>
         
            <th>Chức năng</th>
        </tr>
